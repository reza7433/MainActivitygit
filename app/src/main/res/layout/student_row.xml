<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_studentRow_parent"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_studentRow_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#2f2f2f"
            android:textSize="20sp" />


        <TextView
            android:layout_below="@+id/txt_studentRow_name"
            android:id="@+id/txt_studentRow_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="family"
            android:textColor="#2f2f2f"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_studentRow_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_studentRow_family"
            android:text="field"
            android:textColor="#2f2f2f"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/img_studentRow_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_studentRow_name"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edit_black_24dp" />


        <ImageView
            android:id="@+id/img_studentRow_delet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_studentRow_name"
            android:layout_toLeftOf="@+id/img_studentRow_edit"
            android:src="@drawable/ic_delete_black_24dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>